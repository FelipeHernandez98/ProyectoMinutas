<div class="content-container">
  <div class="sidebar">
    {{>sidebar}}
  </div>
  <div class="container p-4">
    <div class="row">
      <div class="col-md-4 mx-auto">
        <div class="card text-center">
          <div class="card-header">
            <h3>Registrar Vigilante</h3>
          </div>
          <div style="margin: 0 10px 0 10px;" class="card-body text-start">
            <form action="/addVigilante" method="POST" enctype="multipart/form-data">
              <div class="form-group">
                <label> Nombre: </label>
                <input type="type" name="nombre" placeholder="Digite nombre" class="form-control" autofocus required>
              </div>
              <br>
              <div class="form-group">
                <label> Correo: </label>
                <input type="text" name="correo" placeholder="Digite correo" class="form-control" required>
              </div>
              <br>
              <div class="form-group">
                <label> Cedula: </label>
                <input type="number" name="cedula" placeholder="Digite cedula" class="form-control" required>
              </div>
              <br>
              <div class="form-group">
                <label> Tipo de vigilante: </label>
                <select class="form-select" name="rol" required>
                  <option value="vigilante">Vigilante</option>
                  <option value="administrador">administrador</option>
                </select>
              </div>
              <br>
              <div class="form-group">
                <label> Turno: </label>
                <input type="text" name="turno" placeholder="Digite turno" class="form-control" required>
              </div>
              <br>
              <div class="form-group">
                <label> Contrase침a: </label>
                <input type="password" name="contrase침a" placeholder="Digita contrase침a" class="form-control" required>
              </div>
              <br>
              <div class="form-group">
                <input type="file" id="cover" class="form-control" name="image">
                <style type="text/css">
                  .img img {
                    width: 372px;
                    heigth: 200px;
                    border-radius: 5px;
                  }
                </style>
                <div class="img" id="preview"></div>

              </div>
              <script>
                document.getElementById("cover").onchange = function (e) {

                  // Se crea el objeto FileReader 
                  let reader = new FileReader();

                  // Lee el archivo y se pasa a fileReader   
                  reader.readAsDataURL(e.target.files[0]);

                  // Cuando este listo ejecuta el c칩digo interno 
                  reader.onload = function () {

                    let preview = document.getElementById('preview'),
                      image = document.createElement('img');
                    image.src = reader.result;
                    preview.innerHTML = '';
                    preview.append(image);

                  };
                }
              </script>
              <div class="submit-container">
                <button class="btn btn-primary btn-block">
                  Registrar
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>